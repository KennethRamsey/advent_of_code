static string[] Lines;
static int Height, Width;

void part1And2()
{
    Lines = data4
            .Split(Environment.NewLine)
            .ToArray()
            .Dump()
            ;

    Height = Lines.Length;
    Width = Lines[0].Length;

    var starts = findStarts(Lines).ToArray().Dump();

    // part 1
    starts
    .Select(p => FindTrailHeads(p, '0').Distinct().Count())
    .Sum()
    .Dump();

    // part 2
    starts
    .Select(p => FindTrailHeads(p, '0').Count())
    .Sum()
    .Dump();
}

IEnumerable<(int, int)> FindTrailHeads((int x, int y) p, int currVal)
{
    var next = new[]
    {
        (x: p.x + 1, y: p.y),
        (x: p.x - 1, y: p.y),
        (x: p.x, y: p.y + 1),
        (x: p.x, y: p.y - 1),
    }
    .Where(inMap);

    return next.SelectMany(n => CheckNext(n, currVal));
}

IEnumerable<(int, int)> CheckNext((int x, int y) n, int currVal)
{
    var plus1 = Lines[n.y][n.x] == currVal + 1;
    if (plus1)
    {
        if (currVal == '8')
            yield return n;
        else
            foreach (var x in FindTrailHeads(n, currVal + 1))
                yield return x;
    }
}

bool inMap((int x, int y) p2)
{
    return 0 <= p2.x && p2.x < Width
        && 0 <= p2.y && p2.y < Height;
}

IEnumerable<(int, int)> findStarts(string[] lines)
{
    for (int x = 0; x < Width; x++)
    {
        for (int y = 0; y < Height; y++)
        {
            if (lines[y][x] == '0')
                yield return (x, y);
        }
    }
}


